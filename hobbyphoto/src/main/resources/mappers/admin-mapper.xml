  		,	brand_no
  		,	price
  		,	amount
  		,	thumbnail
  		,	p_dimg
  		,	p_simg
  		,	p_type
  		)
  		values
  		(
  			SEQ_PRODUCT.nextval
  		,	#{pName}
  		,	#{categoryNo}
  		,	#{brandNo}
  		,	#{price}
  		,	#{amount}
  		,	#{thumbnail}
  		,	#{pDimg}
  		,	#{pSimg}
  		,	1
  		)
