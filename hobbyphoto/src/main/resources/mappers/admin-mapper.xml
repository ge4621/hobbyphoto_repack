	 <!-- 사진 게시물 리스트 조회 --> 
	 <select id="selectBoard" resultMap="boardResult">
	  select
	        b.board_no
	      , b.board_title
	      , m.nickname
	      , to_char(b.create_date, 'YYYY-MM-DD') as "create_date"
	   from board b
       join member m on b.board_writer = m.user_no
	  where b.status = 'Y'
	    and b.board_type = 1
	  order 
	     by b.board_no desc
	</select>
	
